<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Details - EvaluaAI</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav>
        <ul>
            <li><a href="/teacher">Dashboard</a></li>
            <li><a href="/teacher/create-test">Create Test</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
    <div class="container">
        <h1>Test Details</h1>
        <h2><%= test.subject %></h2>
        <p>Code: <%= testId %></p>
        <p>Created: <%= new Date(test.createdAt).toLocaleString() %></p>
        <p>Duration: <%= test.duration %> minutes</p>
        <p>Questions: <%= test.questionCount %></p>
        <h3>Questions:</h3>
        <ul id="questionList">
            <% test.questions.forEach((question, index) => { %>
                <li>
                    <p><%= question %></p>
                    <button onclick="updateQuestion('<%= index %>')">Update</button>
                </li>
            <% }); %>
        </ul>
    </div>
    <script src="/js/test-details.js"></script>
</body>
</html>